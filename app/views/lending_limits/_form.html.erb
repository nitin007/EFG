<%= simple_form_for [@lender, @lending_limit], html: { class: 'form-horizontal form-lending-limit' } do |f| %>
  <% if @lending_limit.new_record? %>
    <%= f.input :allocation_type_id, as: :radio_buttons, collection: LendingLimitType.all, wrapper_html: { class: 'radio-buttons-inline' } %>
  <% else %>
    <div class="form-group">
      <div class="col-sm-5"><%=t 'simple_form.labels.lending_limit.allocation_type_id' %></div>
      <div class="col-sm-5"><%= @lending_limit.allocation_type.name %></div>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.input :phase_id, collection: @phases %>

  <% if @lending_limit.new_record? %>
    <%= f.input :starts_on, as: :quick_date %>
    <%= f.input :ends_on, as: :quick_date %>
  <% else %>
    <div class="form-group">
      <div class="col-sm-5"><%=t 'simple_form.labels.lending_limit.starts_on' %></div>
      <div class="col-sm-5"><%= @lending_limit.starts_on.to_s(:screen) %></div>
    </div>

    <div class="form-group">
      <div class="col-sm-5"><%=t 'simple_form.labels.lending_limit.ends_on' %></div>
      <div class="col-sm-5"><%= @lending_limit.ends_on.to_s(:screen) %></div>
    </div>
  <% end %>

  <%= f.input :allocation, as: :currency %>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', value: @lending_limit.new_record? ? 'Create Lending Limit' : 'Update Lending Limit', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
