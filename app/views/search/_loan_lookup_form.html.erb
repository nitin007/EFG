<%= form_tag lookup_search_path, method: :get, class: "navbar-form navbar-right", id: "loan_lookup" do %>
  <div class="form-group">
    <%= text_field_tag :term, params[:term], class: 'search-term form-control', id: "lookup_term", placeholder: "Lookup Loan" %>
  </div>
  <noscript>
    <%= submit_tag "Search", class: "btn btn-default", id: "submit_lookup" %>
  </noscript>
<% end %>
