<%= breadcrumbs_for_loan(@loan) %>

<div class="page-header">
  <h1>Loan Changes</h1>
</div>

<%= loan_summary(@loan) do %>
  <div class="form-actions">
    <%= link_to 'Loan Summary', loan_path(@loan), class: 'btn btn-default' %>
  </div>
<% end %>

<p>From this page you can view a summary of Facility History Changes.</p>

<% if @loan_amendments.empty? %>

  <h4>No changes.</h4>

<% else %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date of Change</th>
        <th>Summary Type</th>
      </tr>
    </thead>
    <tbody>
      <% @loan_amendments.each do |loan_amendment| %>
        <tr>
          <td><%= loan_amendment.date_link %></td>

          <td><%= loan_amendment.type_of_amendment_link %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>