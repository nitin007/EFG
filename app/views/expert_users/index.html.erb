<%= breadcrumbs %>

<div class="page-header">
  <h1>Experts</h1>
</div>

<%= simple_form_for @expert, url: expert_users_path do |f| %>
  <%= f.input_field :user_id, collection: @users, 'data-placeholder' => 'Select a user' %>
  <%= f.button :submit, value: 'Add Expert', class: 'btn-primary' %>
<% end %>

<% if @experts.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-expert-users">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @experts.each do |expert| %>
          <tr>
            <td><%= expert.user.name %></td>
            <td>
              <%= button_to 'Remove', expert_user_path(expert), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-mini', form_class: 'form-inline' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="alert">No experts configured.</p>
<% end %>
