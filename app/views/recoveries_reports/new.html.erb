<%= breadcrumbs %>

<div class="page-header">
  <h1>Recoveries Report Criteria</h1>
</div>

<p>From this page you can run a Recoveries Report using selected criteria.</p>

<hr>

<%= simple_form_for(@recoveries_report, url: recoveries_reports_path, html: { class: 'form-horizontal form-premium-schedule-report' }) do |f| %>
  <%= render_errors_on_base(f.object.errors) %>

  <%= f.input :start_date, as: :quick_date %>
  <%= f.input :end_date, as: :quick_date %>

  <% if @recoveries_report.must_select_lenders? %>
    <%= f.input :lender_ids, as: :select, collection: @recoveries_report.allowed_lenders, input_html: { multiple: true } %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
