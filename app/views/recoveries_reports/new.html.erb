<%= breadcrumbs %>

<div class="page-header">
  <h1>Recoveries Report Criteria</h1>
</div>

<p>From this page you can run a Recoveries Report using selected criteria.</p>

<hr>

<%= simple_form_for(@recoveries_report, url: recoveries_reports_path(format: 'html'), html: { class: 'form-horizontal form-premium-schedule-report' }) do |f| %>
  <%= render_errors_on_base(f.object.errors) %>

  <%= f.input :recovered_on_start_date, as: :quick_date %>
  <%= f.input :recovered_on_end_date, as: :quick_date %>

  <% if @recoveries_report.allowed_lenders.count == 1 %>
    <%= f.hidden_field :lender_ids, { multiple: true, value: @recoveries_report.allowed_lenders.first.id } %>
  <% else %>
    <%= f.input :lender_ids, as: :select, collection: @recoveries_report.allowed_lenders, label_method: :name, value_method: :id, input_html: { multiple: true } %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
