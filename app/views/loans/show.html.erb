<%= breadcrumbs_for_loan @loan %>

<div class="page-header with-actions">
  <h1><%= loan_title('Loan Summary', @loan) %></h1>
  <ul id="actions">
    <li><%= link_to "Export CSV", loan_path(@loan, format: 'csv'), class: 'btn btn-default csv-download' %></li>
  </ul>
</div>

<%= loan_summary(@loan) do %>
  <div class="form-actions">
      <%= link_to 'Loan Details', details_loan_path(@loan), class: 'btn btn-default' %>

      <% if current_user.can_view?(LoanModification) && current_user.can_view?(DataCorrection) %>
        <%= link_to 'Loan Changes', loan_loan_amendments_path(@loan), class: 'btn btn-default' %>
      <% end %>

      <%= link_to('View Audit Log', audit_log_loan_path(@loan), class: 'btn btn-default') %>
  </div>

  <%= render "loans/buttons/#{@loan.state}" %>
<% end %>

<% if loan_ineligible?(@loan) %>
  <h3>Ineligibility Reasons</h3>
  <%= render "loan_eligibility_decisions/ineligibility_reasons", loan: @loan %>
<% end %>
