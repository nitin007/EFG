<%= render "user_management/password_not_set_dialog", user: @user %>

<%= simple_form_for [@user.lender, @user], wrapper: :vertical_form do |f| %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary', value: @user.new_record? ? 'Create User' : 'Update User', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>

<%= render 'user_management/user_state_change_buttons', user: @user %>
