<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= application_title %></title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
  <![endif]-->

  <!--[if IE 6]>
    <%= stylesheet_link_tag 'ie6-bootstrap', media: 'all' %>
  <![endif]-->
  <!--[if lt IE 8]>
    <%= stylesheet_link_tag 'ie', media: 'all' %>
  <![endif]-->

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag 'print', media: 'print' %>

  <%= javascript_include_tag "application" %>

  <%= google_analytics %>
</head>

<body class="<%= 'training' if training_mode? %> <%= 'signed-in' if signed_in? %>">

  <div class="navbar navbar-default navbar-static-top navbar-primary">
    <div class="container">
      <% if signed_in? %>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      <% end %>

      <%= link_to "Enterprise Finance Guarantee", root_path, class: "navbar-brand" %>

      <% if user_signed_in? %>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                Help <span class="caret"></span>
              </a>

              <ul class="dropdown-menu" role="menu">
                <% if current_user.can_create?(AskCfe) %>
                  <li><%= link_to 'Ask British Business Bank', new_help_ask_cfe_path %></li>
                <% end %>

                <% if current_user.can_create?(AskAnExpert) %>
                  <li><%= link_to 'Ask an Expert', new_help_ask_an_expert_path %></li>
                <% end %>

                <li class="dropdown-header">Downloads</li>

                <li><%= link_to 'Direct Debit Mandate', '/pdfs/direct_debit_mandate.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'EFG Scheme Manual', '/help/EFG Scheme Manual.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'EFG Key Messages', '/help/EFG Key Messages.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'Premium Collection Guidance', '/help/Premium Collection Guidance Note.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'SIC Indices (2007)', '/help/sic2007index.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'SFLG Scheme Manual', '/help/SFLG Scheme Manual.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'Web Portal Manual', '/help/EFG Web Portal Manual Issue One November 2012 KF Draft.pdf', class: 'pdf-download' %></li>

                <li><%= link_to 'Web Portal Manual Supplement', '/help/Web Portal Manual Supplement.pdf', class: 'pdf-download' %></li>
              </ul>
            </li>
            <li><%= link_to 'Change Password', edit_change_password_path %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, id: "logout" %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? && !current_user_access_restricted? %>
    <div class="navbar navbar-default navbar-static-top navbar-secondary">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <% if current_user.can_view?(LoanStates) %>
              <li><%= link_to 'Loan Portfolio', loan_states_path %></li>
            <% end %>
            <% if current_user.can_create?(PremiumScheduleReport) %>
              <li><%= link_to 'Extract Premium Schedule Information', new_premium_schedule_report_path %></li>
            <% end %>
            <% if current_user.can_create?(LoanEligibilityCheck) %>
              <li><%= link_to 'New Loan', new_eligibility_check_path %></li>
            <% end %>
            <% if current_user.can_create?(Invoice) %>
              <li><%= link_to 'Invoice Received', new_invoice_path %></li>
            <% end %>
            <% if current_user.can_create?(RealisationStatement) %>
              <li><%= link_to 'Recoveries Statement Received', new_realise_loan_path %></li>
            <% end %>
            <% if current_user.can_create?(LoanTransfer::Sflg) %>
              <li><%= link_to 'Transfer a Loan', new_loan_transfer_path %></li>
            <% end %>
            <% if current_user.can_create?(LoanTransfer::LegacySflg) %>
              <li><%= link_to 'Transfer a Legacy Loan', new_legacy_loan_transfer_path %></li>
            <% end %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                Reports <span class="caret"></span>
              </a>

              <ul class="dropdown-menu" role="menu">
                <% if current_user.can_create?(LoanReport) %>
                  <li><%= link_to 'Generate a Loan Report', new_loan_report_path %></li>
                <% end %>
                <% if current_user.can_create?(LoanAuditReport) %>
                  <li><%= link_to 'Generate Loan Audit Report', new_loan_audit_report_path %></li>
                <% end %>
                <% if current_user.can_create?(ClaimLimitsCsvExport) %>
                  <li><%= link_to 'Generate Claim Limits Report', claim_limits_report_path(format: :csv) %></li>
                <% end %>
              </ul>
            </li>

            <% if current_user.can_view?(Search) %>
              <li><%= link_to 'Search', new_search_path %></li>
            <% end %>
          </ul>

          <%= render('search/loan_lookup_form') if current_user.can_view?(Search) %>
        </div>
      </div>
    </div>
  <% end %>


  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= bootstrap_flash %>
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
