<div class="page-header">
  <h1>Choose a new password</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => [resource_name, :password_expired], :html => { :method => :put }, wrapper: :vertical_form) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="col-sm-3">
      <%= f.input :current_password, label: "Current password" %>

      <%= f.input :password, label: "New password" %>

      <%= f.input :password_confirmation, label: "Confirm new password" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change Password", class: 'btn btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
