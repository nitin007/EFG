<div class="page-header">
  <h1>Sign In</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), wrapper: :vertical_form) do |f| %>
  <div class="alert alert-warning" style="color: black;">
    <h2>System-wide password reset</h2>
    <p>
    If you havenâ€™t changed your password since 8pm on Thursday 10 April 2014 you must
    <%= link_to "click here", new_password_path(:user) %>
    to request a password reset.
    </p>
    <p>
    The Enterprise Finance Guarantee password policy is that you must change your password at least once every 90 days.
    </p>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <%= f.input :username, required: false, autofocus: true %>
      <%= f.input :password, required: false %>

      <%= render 'devise/shared/links' %>
      <%= link_to 'Forgot your username?', new_usernames_reminder_path %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Sign In', class: 'btn btn-primary' %>
  </div>
<% end %>
