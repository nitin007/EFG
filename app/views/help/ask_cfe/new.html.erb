<%= breadcrumbs('Help') %>

<div class="page-header">
  <h1>Ask British Business Bank</h1>
</div>

<p>Please fill in your support request below and we'll respond as soon as possible.</p>

<hr>

<%= simple_form_for @ask_cfe, url: help_ask_cfe_path, html: { class: 'form-horizontal form-ask-cfe' } do |f| %>
  <div class="form-group to">
    <div class="control-label col-sm-5">To</div>
    <div class="col-sm-5">
      <span class="badge badge-info">British Business Bank Support</span>
    </div>
  </div>

  <%= f.input :message, as: :text, input_html: { cols: 80, rows: 8 } %>

  <div class="form-actions">
    <%= f.button :submit, value: 'Submit', class: 'btn-primary', data: { 'disable-with' => 'Submitting...' } %>
  </div>
<% end %>
